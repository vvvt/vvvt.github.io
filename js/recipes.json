{
    "recipes": [
        {
            "name": "Asiatische Gemüsepfanne",
            "imgLink": "images/meals/asia.jpg",
            "ingredients": [
                {
                    "name": "Reis",
                    "amount": "1/2 Tasse pro Person",
                    "img-link": "images/ingredients/rice.jpg"
                },
                {
                    "name": "Asiatisches Gemüse (gefroren)",
                    "amount": "nach Bedarf",
                    "img-link": "images/ingredients/asiaveg.jpg"
                },
                {
                    "name": "Kokosmilch",
                    "amount": "1 Dose",
                    "img-link": "images/ingredients/cocos.jpg"
                },
                {
                    "name": "Thai Curry Paste",
                    "amount": "2 TL",
                    "img-link": "images/ingredients/thaicurry.jpg"
                },
                {
                    "name": "Salz, Pfeffer, Paprika, Chili, evtl. China Würzer",
                    "amount": "nach Bedarf",
                    "img-link": "images/ingredients/asiaveg.jpg"
                }
            ],
            "instructions": [
                {
                    "step": 1,
                    "text": "Setz zuerst mal den Reis auf. (mehr dazu)"
                },
                {
                    "step": "2",
                    "text": "Pack das Gemüse in eine Pfanne, mach den Herd an und lass es auftauen."
                },
                {
                    "step": "3",
                    "text": "Schütte die Kokosmilch mit in die Pfanne."
                },
                {
                    "step": "4",
                    "text": "Nimm zum Würzen etwa 2 TL der Thai Curry Paste als Basis. Anschließend noch mit Salz, Pfeffer, Paprika und Chili abschmecken. Zur Not passt auch die China Gewürzmischung."
                }
            ]
        },
        {
            "name": "Couscous mit Gemüse",
            "imgLink": "images/meals/couscous.jpg",
            "ingredients": [
                {
                    "name": "Couscous",
                    "amount": "ca 250 g für 2 Portionen",
                    "img-link": "images/ingredients/rice.jpg"
                },
                {
                    "name": "Wasser",
                    "amount": "1ml pro Gramm Couscous"
                },
                {
                    "name": "Gurke",
                    "amount": "1"
                },
                {
                    "name": "Paprika",
                    "amount": "2"
                },
                {
                    "name": "Salz, Pfeffer, Paprika, Chili, evtl. China Würzer",
                    "amount": "nach Bedarf",
                    "img-link": "images/ingredients/asiaveg.jpg"
                }
            ],
            "instructions": [
                {
                    "step": "1",
                    "text": "Schütte Wasser, Öl und Salz in einen Topf und lass es aufkochen."
                },
                {
                    "step": "2",
                    "text": "Nimm den Topf vom Herd und rühre den Couscous unter."
                },
                {
                    "step": "3",
                    "text": "Rühre den Couscous so lange, bis er nicht mehr klumpt."
                },
                {
                    "step": "4",
                    "text": "Schneide das Gemüse und rühre es unter. Die Menge und Art des Gemüses kann nach Belieben angepasst werden."
                },
                {
                    "step": "5",
                    "text": "Zum Schluss noch kräftig mit Anschließend noch mit Salz, Pfeffer, Paprika und Chili abschmecken. Zur Not passt auch die China Gewürzmischung."
                }
                ]
        }
    ]
}
